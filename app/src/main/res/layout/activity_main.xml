<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:foregroundTint="#80CB62BF"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="429dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lin1_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557">

        <Space
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Space
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="261dp"
            android:layout_height="110dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pon"
            android:gravity="center"
            android:text="스마트 장바구니"
            android:textColor="#0D0001"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="292dp"
            android:layout_height="32dp"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin1_1"
        android:layout_width="399dp"
        android:layout_height="524dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/lin1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="356dp"
                android:layout_height="272dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/con_2" />

            <Button
                android:id="@+id/button1_3"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:background="@drawable/button_custom"
                android:fontFamily="@font/pon"
                android:gravity="clip_horizontal|center|clip_vertical"
                android:text="장바구니 위치보기"
                android:textSize="25dp" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>